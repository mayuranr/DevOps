pipeline {
    agent any
	tools { 
        maven 'MAVEN_HOME' 
        jdk 'JAVA_HOME' 
    }
	stages {
        stage('Build') { 
            steps {
                sh 'mvn -f C:/Program File(x86)/Jenkins/workspace/DevOpsPipelineDemo/WebApp/pom.xml clean deploy' 
            }
        }
        stage('Test') {
            steps {
                sh 'mvn test'
            }
            post {
                always {
                    junit 'target/surefire-reports/*.xml'
                }
            }
        }

    }
}

